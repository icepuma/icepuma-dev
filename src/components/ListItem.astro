---
export interface Props {
	title: string;
	href: string;
	subtitle?: string;
	description?: string;
	tags?: string[];
	external?: boolean;
	aside?: string;
}

const {
	title,
	href,
	subtitle,
	description,
	tags = [],
	external = false,
	aside,
} = Astro.props;
---

<div class="pb-3 border-b border-border last:border-0 last:pb-0">
	<div class="flex items-start justify-between gap-4">
		<a
			href={href}
			class="group block flex-1"
			target={external ? "_blank" : undefined}
			rel={external ? "noopener noreferrer" : undefined}
		>
			<h3 class="text-base font-semibold text-primary group-hover:text-primary/80 transition-colors">
				{title}
			</h3>
			{subtitle && (
				<p class="text-sm text-muted-foreground mt-1">
					{subtitle}
				</p>
			)}
			{description && (
				<p class="text-base text-foreground mt-2">
					{description}
				</p>
			)}
			{tags.length > 0 && (
				<div class="flex flex-wrap gap-2 mt-2">
					{tags.map((tag) => (
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-muted text-muted-foreground">
							{tag}
						</span>
					))}
				</div>
			)}
		</a>
		{aside && (
			<span class="text-sm text-muted-foreground flex-shrink-0">
				{aside}
			</span>
		)}
	</div>
</div>